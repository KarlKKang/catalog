<!doctype html>
<html lang="ja">

<head>
    <%= require("./module/main_header.ejs").default({ title: 'ログイン | ' + titleSuffix, index: false }) %>
    <%= require("./module/header_theme.ejs").default() %>

    <link rel="stylesheet" type="text/css" href="/font/NotoSansJP/NotoSansJP-Light.css">
    <link rel="stylesheet" type="text/css" href="/font/NotoSansJP/NotoSansJP-Medium.css">
    <link rel="stylesheet" type="text/css" href="/css/main.css">
    <link rel="stylesheet" type="text/css" href="/css/portal_form.css">
    <link rel="stylesheet" type="text/css" href="/css/pop_up_window.css">
    <link rel="stylesheet" type="text/css" href="/css/login.css">
</head>

<body class="hidden">
    <div id="form">
        <p id="title">ようこそ</p>
        <p id="warning" class="hidden"></p>
        <div class="input-field hcenter"><input id="username" type="email" autocomplete="email" placeholder="メールアドレス" autocapitalize="off" maxlength="254"></div>
        <div class="input-field hcenter"><input id="current-password" type="password" autocomplete="current-password" placeholder="パスワード"></div>
        <div id="remember-me">
            <label class="checkbox-container">
                <p>ログインしたままにする</p>
                <input type="checkbox" id="remember-me-checkbox">
                <div class="checkmark"></div>
            </label>
        </div>

        <button id="submit-button" class="button hcenter">ログイン</button>
        <p id="forgot-password"><span class="link">パスワードを忘れた方はこちら</span></p>
    </div>
</body>

</html>